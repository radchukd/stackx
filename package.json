{
  "name": "stackx",
  "version": "1.0.0",
  "author": "Dmytro Radchuk <radchuk.d@gmail.com>",
  "homepage": "https://github.com/radchukd/stackx",
  "description": "Template for projects with my favourite stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/radchukd/stackx.git"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "express",
    "graphql",
    "apollo-server",
    "apollo-client",
    "react"
  ],
  "scripts": {
    "build": "npm run server:build && npm run client:build",
    "debug": "nodemon --inspect server/dist/index.js",
    "generate": "graphql-codegen --config codegen.json",
    "lint": "npm run server:lint && npm run client:lint",
    "test": "npm run server:test && npm run client:test",
    "start": "NODE_ENV=production node server/dist/index.js",
    "client:build": "cd client && webpack --config webpack.ts",
    "client:dev": "cd client && webpack-dev-server --config webpack.ts",
    "client:lint": "eslint \"client/src/**/*.{ts,tsx}\"",
    "client:test": "jest ./client --forceExit",
    "server:build": "tsc",
    "server:dev": "nodemon server/src/index.ts --watch server/src",
    "server:lint": "eslint \"server/src/**/*.ts\"",
    "server:test": "jest ./server --forceExit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.4",
    "@hapi/joi": "^17.1.1",
    "apollo-boost": "^0.4.7",
    "apollo-server-express": "^2.12.0",
    "apollo-server-testing": "^2.12.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.1",
    "formik": "^2.1.4",
    "graphql": "^14.6.0",
    "graphql-depth-limit": "^1.1.0",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/typescript": "1.13.2",
    "@graphql-codegen/typescript-mongodb": "1.13.2",
    "@graphql-codegen/typescript-operations": "1.13.2",
    "@graphql-codegen/typescript-resolvers": "1.13.2",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "0.0.45",
    "@types/html-minifier-terser": "^5.0.0",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mongodb": "^3.5.5",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.4",
    "@types/webpack": "^4.41.11",
    "@types/webpack-dev-server": "^3.10.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "awesome-typescript-loader": "^5.2.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-security": "^1.4.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
