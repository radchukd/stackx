{
  "name": "stackx",
  "version": "1.0.0",
  "author": "Dmytro Radchuk <radchuk.d@gmail.com>",
  "homepage": "https://github.com/radchukd/stackx",
  "description": "Template for projects using Typescript",
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "express",
    "react",
    "redux",
    "graphql"
  ],
  "scripts": {
    "build": "npm run server:build && npm run client:build  && npm run lint",
    "debug": "nodemon --inspect server/dist/index.js",
    "lint": "npm run server:lint && npm run client:lint",
    "test": "npm run server:test && npm run client:test",
    "start": "node server/dist/index.js",
    "client:build": "cd client && webpack --config webpack.ts",
    "client:dev": "cd client && webpack-dev-server --config webpack.ts",
    "client:lint": "eslint \"client/src/**/*.{ts,tsx}\"",
    "client:test": "TODO",
    "server:build": "tsc",
    "server:dev": "nodemon server/src/index.ts --ignore client",
    "server:lint": "eslint \"server/src/**/*.ts\"",
    "server:test": "TODO"
  },
  "dependencies": {
    "apollo-boost": "^0.4.7",
    "apollo-server-express": "^1.4.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.1",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "helmet": "^3.21.3",
    "history": "^4.10.1",
    "mongodb": "^3.5.5",
    "react": "^16.13.1",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.3",
    "@types/express-rate-limit": "^5.0.0",
    "@types/helmet": "0.0.45",
    "@types/html-minifier-terser": "^5.0.0",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/mongodb": "^3.5.2",
    "@types/node": "^13.9.3",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux": "^3.6.0",
    "@types/webpack": "^4.41.8",
    "@types/webpack-dev-server": "^3.10.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "awesome-typescript-loader": "^5.2.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-security": "^1.4.0",
    "html-webpack-plugin": "^4.0.1",
    "nodemon": "^2.0.2",
    "redux-devtools-extension": "^2.13.8",
